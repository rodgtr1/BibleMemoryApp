@model IEnumerable<BibleMemorySystem.Models.Slot>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SlotName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrequencyDetail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrequencyDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrequencyMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Packet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlotName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Frequency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrequencyDetail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrequencyDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrequencyMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Packet.PacketId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SlotId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SlotId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SlotId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
